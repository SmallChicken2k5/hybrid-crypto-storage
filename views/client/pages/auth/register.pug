extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +showAlertSuccess(5000)
    +showAlertError(5000)

    .container.py-5
        .row.justify-content-center
            .col-md-6
                .card
                    .card-body
                        h3.text-center Đăng ký
                        form(action="/auth/register", method="POST")
                            .mb-3
                                label.form-label Họ tên
                                input.form-control(type="text", name="fullName", required)
                            .mb-3
                                label.form-label Email
                                input.form-control(type="email", name="email", required)
                            .mb-3
                                label.form-label Mật khẩu
                                input.form-control(type="password", name="password", required)
                            button.btn.btn-primary.w-100(type="submit") Đăng ký

                        .text-center.mt-3
                            a(href="/auth/login") Đã có tài khoản? Đăng nhập