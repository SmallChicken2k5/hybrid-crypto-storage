extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +showAlertSuccess(5000)
  +showAlertError(5000)
  
  .container.py-5
    .row.justify-content-center
      .col-md-6
        .card.shadow
          .card-body.p-4
            h3.text-center.mb-4
              i.bi.bi-lock-fill.me-2
              | Đăng nhập
            
            form(action="/auth/login" method="POST")
              .mb-3
                label.form-label
                  i.bi.bi-envelope.me-1
                  | Email
                input.form-control(
                  type="email" 
                  name="email" 
                  placeholder="Nhập email của bạn"
                  required
                )
              
              .mb-3
                label.form-label
                  i.bi.bi-key.me-1
                  | Mật khẩu
                input.form-control(
                  type="password" 
                  name="password" 
                  placeholder="Nhập mật khẩu"
                  required
                )
              
              button.btn.btn-primary.w-100.py-2(type="submit")
                i.bi.bi-box-arrow-in-right.me-2
                | Đăng nhập
            
            hr.my-4
            
            .text-center
              p.text-muted Chưa có tài khoản?
              a.btn.btn-outline-success(href="/auth/register")
                i.bi.bi-person-plus.me-2
                | Đăng ký ngay