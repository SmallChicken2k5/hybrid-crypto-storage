header.navbar.navbar-expand-lg.navbar-dark.bg-primary-custom.shadow-sm.sticky-top
  .container
    a.navbar-brand.fw-bold(href='/')
      .d-flex.align-items-center
        .icon-wrapper.bg-white.rounded-3.p-2.me-2
          i.bi.bi-shield-lock-fill.fs-4.text-primary-custom
        span.fs-5.brand-text SecureStorage
    
    button.navbar-toggler.border-0(
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNav"
    )
      span.navbar-toggler-icon
    
    .collapse.navbar-collapse#navbarNav
      ul.navbar-nav.ms-auto.align-items-lg-center.gap-2
        li.nav-item
          a.nav-link.text-white.px-3.py-2(href='/') 
            i.bi.bi-house-door-fill.me-2
            | Home
        
        if userId
          li.nav-item
            a.nav-link.text-white.px-3.py-2.rounded-pill.hover-effect(href='/files')
              i.bi.bi-folder-fill.me-2
              | My Files
          li.nav-item
            .dropdown
              a#userDropdown.nav-link.dropdown-toggle.text-white.px-3.py-2.rounded-pill.hover-effect(
                href="#"
                role="button"
                data-bs-toggle="dropdown"
              )
                i.bi.bi-person-circle.me-2.fs-5
                | Account
              ul.dropdown-menu.dropdown-menu-end.shadow.border-0.mt-2
                li
                  a.dropdown-item.py-2(href='/profile')
                    i.bi.bi-person.me-2
                    | Profile
                li
                  a.dropdown-item.py-2(href='/settings')
                    i.bi.bi-gear.me-2
                    | Settings
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item.text-danger.py-2(href='/auth/logout')
                    i.bi.bi-box-arrow-right.me-2
                    | Logout
        else
          li.nav-item
            a.nav-link.text-white.px-3.py-2(href='/auth/login')
              i.bi.bi-box-arrow-in-right.me-2
              | Login
          li.nav-item
            a.btn.btn-outline-light.text-white.rounded-pill.px-4.py-2.fw-semibold.shadow-sm(href='/auth/register')
              i.bi.bi-person-plus.me-2
              | Sign Up

  style.
    .bg-primary-custom {
      background: #667eea !important;
    }
    .text-primary-custom {
      color: #667eea !important;
    }
    .brand-text {
      color: #ffffffff !important; /* teal accent instead of yellow */
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
      font-weight: 700;
      letter-spacing: 0.5px;
    }
    .navbar-brand:hover .brand-text {
      color: #ffffffff !important; /* lighter teal on hover */
      transform: scale(1.02);
      transition: all 0.3s ease;
    }
    .navbar-brand:hover .icon-wrapper {
      transform: rotate(10deg) scale(1.1);
      transition: all 0.3s ease;
    }
    .hover-effect:hover {
      background-color: rgba(255, 255, 255, 0.2);
      transition: all 0.3s ease;
    }
    .dropdown-menu {
      animation: slideDown 0.3s ease;
      border-radius: 12px;
      padding: 0.5rem;
    }
    .dropdown-item {
      border-radius: 8px;
      transition: all 0.2s ease;
    }
    .dropdown-item:hover {
      background-color: #f8f9fa;
      padding-left: 1.5rem;
    }
    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-10px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    @media (max-width: 991px) {
      .navbar-collapse {
        background: rgba(102, 126, 234, 0.95);
        padding: 1rem;
        border-radius: 12px;
        margin-top: 1rem;
      }
    }