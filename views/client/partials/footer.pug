  style.
    .bg-primary-footer {
      background-color: #667eea !important;
    }
    .text-primary-footer {
      color: #8fa0f3 !important;
    }
    .social-links .btn {
      width: 36px;
      height: 36px;
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: all 0.3s ease;
    }
    .social-links .btn:hover {
      background-color: #667eea;
      border-color: #667eea;
      color: #fff;
      transform: translateY(-3px);
    }
    .hover-link {
      transition: all 0.2s ease;
    }
    .hover-link:hover {
      opacity: 1 !important;
      color: #8fa0f3 !important;
      padding-left: 5px;
    }
    footer {
      position: relative;
    }
    footer::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: #667eea;
      box-shadow: 0 0 10px rgba(102, 126, 234, 0.5);
    }